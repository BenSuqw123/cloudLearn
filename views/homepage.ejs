<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>My Cloud | NextCloud Clone</title>
    <script src="/style.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <style>
        :root {
            --primary: #0082c9;
            --sidebar-width: 280px;
        }
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background-color: #f0f2f5;
        }
        .sidebar {
            width: var(--sidebar-width);
            background: linear-gradient(180deg, #2b2b2b 0%, #1a1a1a 100%);
        }
        .main-content {
            margin-left: var(--sidebar-width);
        }
        .file-card {
            transition: all 0.2s ease;
        }
        .file-card:hover {
            transform: translateY(-3px);
            box-shadow: 0 10px 20px rgba(0,0,0,0.1);
        }
        .progress-bar {
            background: linear-gradient(90deg, var(--primary) 0%, #00d2ff 100%);
        }
        @media (max-width: 768px) {
            .sidebar {
                transform: translateX(-100%);
            }
            .sidebar.active {
                transform: translateX(0);
            }
            .main-content {
                margin-left: 0;
            }
        }
    </style>
</head>
<body>
    <div class="flex h-screen overflow-hidden">
        <!-- Sidebar -->
        <div class="sidebar fixed h-full text-white z-20 transition-all duration-300">
            <div class="h-full flex flex-col">
                <!-- Logo -->
                <div class="p-6 flex items-center">
                    <div class="w-10 h-10 rounded-full bg-white flex items-center justify-center">
                        <i class="fas fa-cloud text-2xl text-blue-600"></i>
                    </div>
                    <h1 class="ml-3 text-xl font-bold">MyCloud</h1>
                </div>

                <!-- Navigation -->
                <nav class="flex-1 px-4 space-y-1">
                    <a href="#" class="flex items-center px-4 py-3 rounded-lg bg-gray-800 text-white">
                        <i class="fas fa-folder-open mr-3"></i>
                        <span>My Files</span>
                    </a>
                    <a href="#" class="flex items-center px-4 py-3 rounded-lg text-gray-300 hover:bg-gray-700">
                        <i class="fas fa-share-alt mr-3"></i>
                        <span>Shared with me</span>
                    </a>
                    <a href="#" class="flex items-center px-4 py-3 rounded-lg text-gray-300 hover:bg-gray-700">
                        <i class="fas fa-clock mr-3"></i>
                        <span>Recent</span>
                    </a>
                    <a href="#" class="flex items-center px-4 py-3 rounded-lg text-gray-300 hover:bg-gray-700">
                        <i class="fas fa-star mr-3"></i>
                        <span>Starred</span>
                    </a>
                    <a href="#" class="flex items-center px-4 py-3 rounded-lg text-gray-300 hover:bg-gray-700">
                        <i class="fas fa-trash mr-3"></i>
                        <span>Trash</span>
                    </a>
                </nav>

                <!-- Storage -->
                <div class="p-6">
                    <div class="flex justify-between text-sm mb-1">
                        <span class="text-gray-300">Storage</span>
                        <span class="text-white">62% used</span>
                    </div>
                    <div class="w-full bg-gray-700 rounded-full h-2">
                        <div class="progress-bar h-2 rounded-full" style="width: 62%"></div>
                    </div>
                    <div class="text-xs text-gray-400 mt-2">4.3 GB of 7 GB</div>
                </div>

                <!-- User -->
                <div class="p-4 border-t border-gray-700 flex items-center">
                    <div class="w-10 h-10 rounded-full bg-blue-500 flex items-center justify-center text-white font-bold">TA</div>
                    <div class="ml-3">
                        <div class="text-white font-medium">Tuan Anh</div>
                        <div class="text-xs text-gray-400">admin@mycloud.com</div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Mobile menu button -->
        <button id="sidebarToggle" class="fixed left-4 top-4 z-30 md:hidden p-2 bg-white rounded-md shadow-md">
            <i class="fas fa-bars"></i>
        </button>

        <!-- Main Content -->
        <div class="flex-1 overflow-auto main-content transition-all duration-300">
            <!-- Header -->
            <header class="bg-white shadow-sm py-4 px-6 flex items-center justify-between sticky top-0 z-10">
                <h2 class="text-xl font-semibold">My Files</h2>
                
                <div class="flex items-center space-x-4">
                    <div class="relative">
                        <input type="text" placeholder="Search files..." class="pl-10 pr-4 py-2 border border-gray-200 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500">
                        <i class="fas fa-search absolute left-3 top-3 text-gray-400"></i>
                    </div>
                    
                    <button class="p-2 text-gray-600 hover:text-gray-900 relative">
                        <i class="fas fa-bell"></i>
                        <span class="absolute top-0 right-0 w-2 h-2 bg-red-500 rounded-full"></span>
                    </button>
                </div>
            </header>

            <!-- Content -->
            <main class="p-6">
                <!-- Action Buttons -->
                <div class="flex flex-wrap justify-between items-center mb-6">
                    <div class="flex space-x-2 mb-4 sm:mb-0">
                        <button class="px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 flex items-center">
                            <i class="fas fa-plus mr-2"></i> New
                        </button>
                        <button class="px-4 py-2 border border-gray-300 rounded-lg hover:bg-gray-50 flex items-center">
                            <i class="fas fa-upload mr-2"></i> Upload
                        </button>
                    </div>
                    
                    <div class="flex space-x-2">
                        <button class="p-2 rounded-lg hover:bg-gray-100">
                            <i class="fas fa-list"></i>
                        </button>
                        <button class="p-2 rounded-lg hover:bg-gray-100">
                            <i class="fas fa-th-large"></i>
                        </button>
                        <button class="p-2 rounded-lg hover:bg-gray-100">
                            <i class="fas fa-sort-alpha-down"></i>
                        </button>
                    </div>
                </div>

                <!-- Breadcrumb -->
                <div class="flex items-center text-sm text-gray-600 mb-6">
                    <a href="#" class="hover:text-blue-600">Home</a>
                    <span class="mx-2">/</span>
                    <a href="#" class="hover:text-blue-600">My Files</a>
                </div>

                <!-- Files Grid -->
                <div class="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 lg:grid-cols-5 gap-4">
                    <!-- Folders -->
                    <div class="file-card bg-white rounded-lg p-4 cursor-pointer border border-gray-100 hover:border-blue-200">
                        <div class="flex justify-center text-yellow-500 text-4xl mb-3">
                            <i class="fas fa-folder"></i>
                        </div>
                        <div class="text-center font-medium truncate">Documents</div>
                        <div class="text-center text-xs text-gray-500">12 items</div>
                    </div>
                    
                    <div class="file-card bg-white rounded-lg p-4 cursor-pointer border border-gray-100 hover:border-blue-200">
                        <div class="flex justify-center text-yellow-500 text-4xl mb-3">
                            <i class="fas fa-folder"></i>
                        </div>
                        <div class="text-center font-medium truncate">Images</div>
                        <div class="text-center text-xs text-gray-500">47 items</div>
                    </div>
                    
                    <!-- Files -->
                    <div class="file-card bg-white rounded-lg p-4 cursor-pointer border border-gray-100 hover:border-blue-200">
                        <div class="flex justify-center text-red-500 text-4xl mb-3">
                            <i class="fas fa-file-pdf"></i>
                        </div>
                        <div class="text-center font-medium truncate">Report.pdf</div>
                        <div class="text-center text-xs text-gray-500">2.4 MB</div>
                    </div>
                    
                    <div class="file-card bg-white rounded-lg p-4 cursor-pointer border border-gray-100 hover:border-blue-200">
                        <div class="flex justify-center text-blue-500 text-4xl mb-3">
                            <i class="fas fa-file-word"></i>
                        </div>
                        <div class="text-center font-medium truncate">Project.docx</div>
                        <div class="text-center text-xs text-gray-500">1.8 MB</div>
                    </div>
                    
                    <div class="file-card bg-white rounded-lg p-4 cursor-pointer border border-gray-100 hover:border-blue-200">
                        <div class="flex justify-center text-green-500 text-4xl mb-3">
                            <i class="fas fa-file-excel"></i>
                        </div>
                        <div class="text-center font-medium truncate">Budget.xlsx</div>
                        <div class="text-center text-xs text-gray-500">3.2 MB</div>
                    </div>
                    
                    <div class="file-card bg-white rounded-lg p-4 cursor-pointer border border-gray-100 hover:border-blue-200">
                        <div class="flex justify-center text-gray-500 text-4xl mb-3">
                            <i class="fas fa-file-archive"></i>
                        </div>
                        <div class="text-center font-medium truncate">Backup.zip</div>
                        <div class="text-center text-xs text-gray-500">156 MB</div>
                    </div>
                </div>

                <!-- Upload Area -->
                <div class="mt-8 p-6 border-2 border-dashed border-gray-300 rounded-lg text-center">
                    <div class="flex justify-center text-3xl text-gray-400 mb-3">
                        <i class="fas fa-cloud-upload-alt"></i>
                    </div>
                    <h3 class="text-lg font-medium text-gray-700 mb-1">Drag and drop files here</h3>
                    <p class="text-gray-500 mb-4">or</p>
                    <button class="px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700">
                        Select Files
                    </button>
                </div>
            </main>
        </div>
    </div>

    <script>
        // Mobile sidebar toggle
        document.getElementById('sidebarToggle').addEventListener('click', function() {
            document.querySelector('.sidebar').classList.toggle('active');
        });

        // File card click handler
        document.querySelectorAll('.file-card').forEach(card => {
            card.addEventListener('click', function() {
                // You could add functionality here to open files/folders
                console.log('Opening: ' + this.querySelector('div:nth-child(2)').textContent);
            });
        });
    </script>
</body>
</html>
